@model Tarefas.Web.Models.TarefaViewModel
<form class="form-group" asp-action="Create">
    @Html.LabelFor(model => model.Titulo, new {@class ="form-label"})
    @Html.TextBoxFor(model => model.Titulo,  new {@class ="form-control", @readonly="true"})
    @Html.LabelFor(model => model.Descricao,  new {@class ="form-label"})
    @Html.TextBoxFor(model => model.Descricao,  new {@class ="form-control", @readonly="true"})
    <input type="Submit" />
</form>