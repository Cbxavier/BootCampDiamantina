@model IEnumerable<Tarefas.Web.Models.TarefaViewModel>
<table class="table table-white">
    <tr>
        <td>
            Id
        </td>
        <td>
            Titulo
        </td>
        <td>
            Descricao
        </td>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Titulo
            </td>
            <td>
                @item.Descricao
            </td>
            <td>
                <a asp-action="Details" asp-controller="Tarefa" asp-rote-id="@item.Id">Detalhes</a>
            </td>

        </tr>
    } 
</table>